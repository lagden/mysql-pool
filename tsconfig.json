{
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"target": "ES2023",
		"declaration": true,
		"emitDeclarationOnly": true,
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
		"outDir": "./types"
	},
	"include": ["./src/**/*.js"],
	"exclude": ["./types/**/*.d.ts"]
}
